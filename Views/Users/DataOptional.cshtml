@model API_Complete_ASP.Models.DataUser

@{
    ViewData["Title"] = "Contact";
}

<link rel="stylesheet" href="~/lib/bootstrap/dist/css/ContactBootstrap.min.css" asp-append-version="true" />
<link rel="stylesheet" href="~/css/ContactStyle.css" asp-append-version="true" />

<div class="content">

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-10">


                <div class="row justify-content-center">
                    <div class="col-md-6">

                        <h3 class="heading mb-4">Let's talk about everything!</h3>
                        <p>- Tienes alguna duda?</p>
                        <p>- Tienes algun problema al loguearte o registrarte?</p>
                        <p>- Tienes alguna sugerencia?</p>
                        <h4 class="heading mb-4">Contactame!</h4>

                        <p><img src="~/Imgs/undraw-contact.svg" alt="Image" class="img-fluid"></p>


                    </div>
                    <div class="col-md-6">

                        <form asp-controller="Users" asp-action="DataOptional" class="mb-5" method="post" id="contactForm" name="contactForm">
                            <div class="row">
                                <div class="col-md-12 form-group">
                                    <input asp-for="Name" type="text" class="form-control" name="Name" id="name" placeholder="Your name">
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12 form-group">
                                    <input asp-for="LastName" type="text" class="form-control" name="LastName" id="lastName" placeholder="LastName">
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12 form-group">
                                    <input asp-for="Age" type="text" class="form-control" name="Age" id="subject" placeholder="Age">
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12 form-group">
                                    <textarea asp-for="Phone" class="form-control" name="Phone" id="message" cols="30" rows="7" placeholder="Phone"></textarea>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12 form-group">
                                    <input asp-for="Country" type="text" class="form-control" name="Country" id="email" placeholder="Country">
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12 form-group">
                                    <input asp-for="City" type="text" class="form-control" name="City" id="subject" placeholder="City">
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12 form-group">
                                    <textarea asp-for="Genero" class="form-control" name="Genero" id="message" cols="30" rows="7" placeholder="Genero"></textarea>
                                </div>
                            </div>


                            <div class="row">
                                <div class="col-12">
                                    <input type="submit" value="Agregar Datos" class="btn btn-primary rounded-0 py-2 px-4">
                                    <span class="submitting"></span>
                                </div>
                            </div>
                        </form>

                        <div id="form-message-warning mt-4"></div>
                        <div id="form-message-success">
                            Your message was sent, thank you!
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

<script src="js/ContactMain.js"></script>